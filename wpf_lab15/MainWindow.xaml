<Window x:Class="wpf_lab15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_lab15"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450"
        Width="800"
        Background="#fffdfaf1"
        FontSize="12">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock 
            FontSize="26" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            Список дел
        </TextBlock>

        <Button
            Grid.Row="2"
            MaxWidth="100"
            Margin="5"
            Background="#5EBEC4"
            Name="removeToDo">
            Удалить дело
        </Button>

        <Button
            Grid.Row="2"
            Grid.Column="1"
            MaxWidth="100"
            Margin="5"
            Background="#5EBEC4"
            Name="addToDo">
            <Button.ToolTip>
                При добавлении дело появится в списке слева, и его придется выполнить
            </Button.ToolTip>

            Добавить дело
        </Button>

        <CheckBox 
            Grid.Column="1"
            IsChecked="True"
            VerticalAlignment="Bottom"
            Margin="5">
            Добавление новых дел
        </CheckBox>

        <ListBox 
            Grid.Row="1"
            Background="#FDF5DF"
            Margin="5"
            Name="listToDo">
            <ListBoxItem>
                <StackPanel>
                    <TextBlock>Приготовить покушать</TextBlock>
                    <TextBlock>15.01.2024</TextBlock>
                    <TextBlock FontSize="10">Нет описания</TextBlock>
                </StackPanel>
            </ListBoxItem>

            <ListBoxItem>
                <StackPanel>
                    <TextBlock>Поработать</TextBlock>
                    <TextBlock>20.01.2024</TextBlock>
                    <TextBlock FontSize="10">Съездить на совещание в москву</TextBlock>
                </StackPanel>
            </ListBoxItem>

            <ListBoxItem>
                <StackPanel>
                    <TextBlock>Отдохнуть</TextBlock>
                    <TextBlock>01.02.2024</TextBlock>
                    <TextBlock FontSize="10">Съездить в отпуск в Сочи</TextBlock>
                </StackPanel>
            </ListBoxItem>
        </ListBox>

        <GroupBox
            Grid.Column="1"
            Grid.Row="1"
            Margin="5"
            Background="#FDF5DF"
            Name="groupBoxToDo">
            <StackPanel
                Margin="5">
                <TextBlock>Название</TextBlock>
                <TextBox 
                    Margin="0 5 0 10"
                    Name="titleToDo">
                </TextBox>
                <TextBlock>Выполнить до</TextBlock>
                <DatePicker 
                    Margin="0 5 0 10"
                    Name="dateToDo">
                </DatePicker>
                <TextBlock>Описание</TextBlock>
                <TextBox
                    Margin="0 5 0 10"
                    MinLines="10"
                    MaxLines="10"
                    AcceptsTab="True"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Visible"
                    Name="descriptionToDo">
                </TextBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
